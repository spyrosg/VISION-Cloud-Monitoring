<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>gr.ntua.vision</groupId>
  <artifactId>vismo</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <java.version>1.6</java.version>
    <jersey.version>1.8</jersey.version>
    <jetty-version>8.0.4.v20111024</jetty-version>
  </properties>

  <build>
    <plugins>

      <!-- compiler plugin: we require javac 1.6 -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
      </plugin>

      <!-- produce an uberjar, running mvn package -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.5</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>gr.ntua.vision.monitoring.Main</mainClass>
                </transformer>
              </transformers>
              <artifactSet>
                <!-- this is used to exclude dependencies from the uberjar -->
                <excludes>
                  <exclude>junit:junit</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- this is the plugin that generates the rpm -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>rpm-maven-plugin</artifactId>
        <version>2.1-alpha-1</version>

        <executions>
          <execution>
            <goals>
              <goal>rpm</goal>
            </goals>
          </execution>
        </executions>

        <configuration>
          <copyright>NOT-SPECIFIED</copyright>
          <group>Application/System</group>
          <summary>vismo, the monitoring component of the VISION Cloud stack</summary>
          <description>vismo, the monitoring component of the VISION Cloud stack</description>
          <packager>vassilis</packager>
          <release>1.0</release>

          <requires>
            <require>java &gt;= 1.6</require>
          </requires>

          <defineStatements>
            <defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
          </defineStatements>

          <mappings>

            <mapping>
              <directory>/srv/vismo</directory>
              <username>root</username>
              <groupname>root</groupname>
              <filemode>0644</filemode>
              <directoryIncluded>false</directoryIncluded>
              <sources>
                <source>
                  <location>target/vismo-1.0.0-SNAPSHOT.jar</location>
                  <destination>vismo.jar</destination>
                </source>
              </sources>
            </mapping>

            <mapping>
              <directory>/etc/init.d</directory>
              <username>root</username>
              <groupname>root</groupname>
              <filemode>0755</filemode>
              <directoryIncluded>false</directoryIncluded>
              <sources>
                <source>
                  <location>src/main/scripts/init.d</location>
                  <destination>vision-vismo</destination>
                </source>
              </sources>
            </mapping>

          </mappings>
        </configuration>

      </plugin>
    </plugins>
  </build>

  <dependencies>

    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-server</artifactId>
      <version>${jersey.version}</version>
    </dependency>

    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-client</artifactId>
      <version>${jersey.version}</version>
    </dependency>

    <dependency>
      <groupId>org.eclipse.jetty</groupId>
      <artifactId>jetty-server</artifactId>
      <version>${jetty-version}</version>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.jmock</groupId>
      <artifactId>jmock-junit4</artifactId>
      <version>2.5.1</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

</project>

